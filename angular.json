{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "stores": {
      "projectType": "library",
      "root": "",
      "sourceRoot": "src",
      "prefix": "stores",
      "architect": {
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "test.ts",
            "tsConfig": "tsconfig.json",
            "karmaConfig": "karma.conf.js"
          },
          "configurations": {
            "ci": {
              "karmaConfig": "karma.ci.conf.js",
              "codeCoverage": true,
              "sourceMap": true,
              "progress": false,
              "watch": false
            }
          }
        }
      }
    }
  },
  "defaultProject": "stores"
}
