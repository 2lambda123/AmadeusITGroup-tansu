{
  "name": "@amadeus-it-group/tansu",
  "peerDependencies": {},
  "devDependencies": {
    "@angular-devkit/build-angular": "^14.1.0",
    "@angular/cli": "^14.1.0",
    "@angular/common": "^14.1.0",
    "@angular/compiler": "^14.1.0",
    "@angular/compiler-cli": "^14.1.0",
    "@angular/core": "^14.1.0",
    "@angular/platform-browser": "^14.1.0",
    "@angular/platform-browser-dynamic": "^14.1.0",
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@microsoft/api-documenter": "^7.19.1",
    "@microsoft/api-extractor": "^7.28.7",
    "@rollup/plugin-typescript": "^8.3.4",
    "@types/jasmine": "^4.0.3",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.1",
    "jasmine-core": "^4.3.0",
    "jasmine-spec-reporter": "^7.0.0",
    "karma": "^6.4.0",
    "karma-chrome-launcher": "^3.1.1",
    "karma-coverage": "^2.2.0",
    "karma-jasmine": "^5.1.0",
    "karma-jasmine-html-reporter": "^2.0.0",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "rollup": "^2.77.2",
    "rxjs": "^7.5.6",
    "typescript": "^4.7.4",
    "zone.js": "^0.11.7"
  },
  "scripts": {
    "test": "ng test -c ci",
    "test-tdd": "ng test",
    "clean": "rm -rf dist temp",
    "lint": "eslint src/{,**/}*.ts",
    "prebuild": "yarn clean",
    "build:rollup": "rollup --failAfterWarnings -c",
    "build:dts": "tsc -p tsconfig.d.json",
    "build:api": "api-extractor run",
    "build:package": "cp README.md src/package.json dist/package",
    "build": "yarn build:rollup && yarn build:dts && yarn build:api && yarn build:package",
    "check-format": "prettier --check .",
    "docs": "api-documenter markdown -i temp -o dist/docs"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "pretty-quick --staged"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
